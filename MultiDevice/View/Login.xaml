<Window x:Class="MultiDevice.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiDevice"
        mc:Ignorable="d"
        d:DesignHeight="150" d:DesignWidth="400" Background="AliceBlue"
        Title="用户验证" >
    <Grid>
        <StackPanel>
            <Label Content="请输入验证码" HorizontalAlignment="Center" x:Name="Theme"/>
            <TextBox TextWrapping="Wrap" Name="veri_code_tb" Margin="5"  HorizontalContentAlignment="Center" Padding="5" VerticalContentAlignment="Center" FontSize="16" FontWeight="Bold"/>
         
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="确认" Click="veri_code_commit" HorizontalContentAlignment="Center" Padding="5" VerticalContentAlignment="Center" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
                <Button Grid.Column="1" Content="取消" Click="veri_code_cancel" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Padding="5" VerticalContentAlignment="Center" FontSize="16" FontWeight="Bold"/>
            </Grid>
        </StackPanel> 
    </Grid>
</Window>
