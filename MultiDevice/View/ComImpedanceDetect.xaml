<Window x:Class="MultiDevice.ComImpedanceDetect"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Closing="Window_Closing"
        Icon="../image/icon.ico"
        xmlns:Lay="clr-namespace:LayUI.Wpf.Controls;assembly=LayUI.Wpf"
        WindowStartupLocation="CenterScreen"
        Title="ImpedanceDetect" Height="680" Width="900">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="280"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="10" ShowGridLines="False" Name="IconGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <Canvas Grid.Row="0" Name="canvasBoss"></Canvas>
            <DockPanel Grid.Row="1" Name="dockpanel" LastChildFill="True" VerticalAlignment="Center">
                <Grid Grid.Row="1" VerticalAlignment="Center" ShowGridLines="False" Width="300">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Background="Chartreuse" TextAlignment="Center" >0-30kΩ</TextBlock>
                    <TextBlock Grid.Column="1" Background="Aqua" TextAlignment="Center">30-100kΩ</TextBlock>
                    <TextBlock Grid.Column="2" Background="Yellow" TextAlignment="Center">100-200kΩ</TextBlock>
                </Grid> 
            </DockPanel>
        </Grid>

        <Grid Grid.Column="1" Margin="5 5 5 0" ShowGridLines="False">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Lay:LayButton Click="BtnStopMeasuring" Grid.Row="1" Margin="0,10,0,5" Type="Customize" Width="280" Height="38">开始游戏</Lay:LayButton>
            <ListView Grid.Row="0" Name="ImpedanceList" HorizontalContentAlignment="Center" FontSize="20" IsSynchronizedWithCurrentItem="True">
                <ListView.View>
                    <GridView AllowsColumnReorder="True" >
                        <GridViewColumn Header="通道" DisplayMemberBinding="{Binding SerialNb}" Width="80"/>
                        <GridViewColumn Header="名称" DisplayMemberBinding="{Binding Channel}"  Width="80"/>
                        <GridViewColumn Header="阻抗" DisplayMemberBinding="{Binding Impedance}" Width="90"/>
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
