<Window x:Class="MultiDevice.UserSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiDevice"
        mc:Ignorable="d"
        xmlns:Lay="clr-namespace:LayUI.Wpf.Controls;assembly=LayUI.Wpf"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Title="游戏准备" Height="600" Width="1000">

    <Window.Resources>
        <Style x:Key="dgCell" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="215"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0">
            <Lay:LayTextBox x:Name="searchEdit" TextChanged="searchEdit_TextChanged" Watermark="请输入测试编号/患者姓名" Width="960">
            </Lay:LayTextBox>
        </Grid>
        
        <DataGrid Grid.Row="1"
        x:Name="userGrid"
        AutoGenerateColumns="False"
        HeadersVisibility="Column"
        ColumnHeaderHeight="35"
        AlternationCount="2"
        SelectionMode="Single"
        IsReadOnly="True"
        CanUserAddRows="False"
        CanUserDeleteRows="False"
        CanUserReorderColumns="False"
        CanUserResizeRows="False"
        CanUserResizeColumns="False"
        MinRowHeight="24"
        FontSize="16"
        ScrollViewer.VerticalScrollBarVisibility="Auto"
        MaxHeight="600"
        SelectionChanged="userGrid_SelectionChanged"
        Margin="10">

            <DataGrid.Style>
                <Style TargetType="DataGrid">
                    <!--网格线颜色-->
                    <Setter Property="BorderBrush" Value="LightGray" />
                    <Setter Property="HorizontalGridLinesBrush">
                        <Setter.Value>
                            <SolidColorBrush Color="LightGray"/>
                        </Setter.Value>
                    </Setter>

                    <Setter Property="VerticalGridLinesBrush">
                        <Setter.Value>
                            <SolidColorBrush Color="LightGray"/>
                        </Setter.Value>
                    </Setter>

                    <Style.Triggers>
                        <!-- 如果 DataGrid 没有数据，显示 TextBlock -->
                        <Trigger Property="HasItems" Value="False">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGrid">
                                        <Grid>
                                            <!-- 保证表头始终显示在顶部 -->
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <!-- 表头 -->
                                                <RowDefinition Height="*"/>
                                                <!-- 内容区域 -->
                                            </Grid.RowDefinitions>

                                            <!-- 表头区域，外部添加边框以显示上边框 -->
                                            <Border BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="1,1,1,0" Grid.Row="0">
                                                <DataGridColumnHeadersPresenter />
                                            </Border>

                                            <!-- 显示"暂无数据"消息，同时保留边框 -->
                                            <Border Grid.Row="1" BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                                <TextBlock Text="暂无数据"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        FontSize="24"
                                        Foreground="Gray"/>
                                            </Border>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Style>
            <DataGrid.ColumnHeaderStyle>
                <!--表头样式-->
                <Style TargetType="DataGridColumnHeader">
                    <!--表头字居中-->
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize" Value="14"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.Columns>
                <DataGridTextColumn MinWidth ="160" Binding="{Binding TestNumber}" Header="测试编号" ElementStyle="{StaticResource dgCell}" />
                <DataGridTextColumn MinWidth ="160" Binding="{Binding DetectNumber}" Header="病历号" ElementStyle="{StaticResource dgCell}" />
                <DataGridTextColumn MinWidth ="120" Binding="{Binding Name}" Header="  姓名  " ElementStyle="{StaticResource dgCell}" />
                <DataGridTextColumn MinWidth ="80"  Binding="{Binding Sex}" Header=" 性别 " ElementStyle="{StaticResource dgCell}" />
                <DataGridTextColumn MinWidth ="100" Binding="{Binding BirthDay}" Header=" 出生日期 " ElementStyle="{StaticResource dgCell}" />
                <DataGridTextColumn MinWidth ="100" Binding="{Binding Status}" Header=" 状态 " ElementStyle="{StaticResource dgCell}" />
                <DataGridTemplateColumn MinWidth="200" Header="操作">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                <Button Margin="10 0 0 0"  Width="90" Height="28" FontSize="15" Background="#E0FFFF"  Content="重置状态" Cursor="Hand" x:Name="RestStatusButton" Click="RestStatusButton_Click"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2" Margin="10,5,10,10">
            <Lay:LayGroupBox Header="游戏参数选择">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Lay:LayTextBlock Grid.Row="0" Grid.Column="0" Text="范式选择："/>
                    <Lay:LayComboBox  Grid.Row="0" Grid.Column="0" Height="36" VerticalAlignment="Bottom" x:Name="ParadigmComboBox" SelectionChanged="ParadigmComboBox_SelectionChanged"/>

                    <Lay:LayTextBlock Grid.Row="0" Grid.Column="1" Text="游戏选择：" Margin="10,0,0,0"/>
                    <Lay:LayComboBox  Grid.Row="0" Grid.Column="1" Height="36" VerticalAlignment="Bottom" Margin="10,0,0,0" x:Name="GameListComboBox"/>

                    <Lay:LayTextBlock Grid.Row="1" Grid.Column="0" Text="总数(Session)："/>
                    <Lay:LayNumericUpDown Grid.Row="1" Grid.Column="0" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="205" x:Name="SessionTotal" Value="1"/>

                    <Lay:LayTextBlock Grid.Row="1" Grid.Column="1" Text="序号(Session)："  Margin="10,0,0,0"/>
                    <Lay:LayNumericUpDown Grid.Row="1" Grid.Column="1" Height="30" Width="195" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,0" x:Name="SessionNum" Value="1"/>

                    <Lay:LayTextBlock Grid.Row="1" Grid.Column="2" Text="个数(Epoch)："  Margin="10,0,0,0"/>
                    <Lay:LayNumericUpDown Grid.Row="1" Grid.Column="2" Height="30" Width="195" VerticalAlignment="Bottom" HorizontalAlignment="Left"  Margin="10,0,0,0" x:Name="EpochCount" Value="4"/>

                    <Lay:LayTextBlock Grid.Row="1" Grid.Column="3" Text="时长(Epoch)单位-分钟：" Margin="10,0,0,0"/>
                    <Lay:LayNumericUpDown Grid.Row="1" Grid.Column="3" Height="30"  Width="195" VerticalAlignment="Bottom" HorizontalAlignment="Left"  Margin="10,0,0,0" x:Name="EpochTimes" Value="4"/>

                    <Lay:LayTextBlock Grid.Row="3" Grid.Column="0" Text="时长(Break)单位-分钟："/>
                    <Lay:LayNumericUpDown Grid.Row="3" Grid.Column="0" Height="30" Width="205" VerticalAlignment="Bottom" HorizontalAlignment="Left" x:Name="BreakTimes" Value="1"/>
                </Grid>
            </Lay:LayGroupBox>
        </Grid>

        <Lay:LayButton Grid.Row="3" Content="开始阻抗匹配" Type="Customize" x:Name="StartDetectBtn" Click="StartDetectBtn_Click" Width="120"/>
    </Grid>
</Window>
