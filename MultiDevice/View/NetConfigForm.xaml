<Window x:Class="MultiDevice.NetConfigForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiDevice"
        xmlns:Lay="clr-namespace:LayUI.Wpf.Controls;assembly=LayUI.Wpf"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        Title="客户端网络配置" Height="350" Width="520">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="140"/>
            </Grid.ColumnDefinitions>

            <Label Content="客户端端名称:" VerticalAlignment="Center" Margin="10,0,10,0" HorizontalAlignment="Right"/>
            <Lay:LayTextBox   Grid.Column="1" Height="24" x:Name="ClientNameEdit" Watermark="" HorizontalAlignment="Left"/>
            <Lay:LayButton Grid.Column="3" Width="120" Margin="8,0,0,0" Height="28" x:Name="saveConfigBtn" Type="Customize" Click="saveConfigBtn_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{StaticResource IconFont}" Text="&#xea8a;" FontSize="16" />
                    <TextBlock Text="保存配置" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Lay:LayButton>
            <Label Content="客户端ID:" VerticalAlignment="Center" Grid.Row="1" Margin="10,0,10,0" HorizontalAlignment="Right"/>
            <Lay:LayComboBox Grid.Row="1" Grid.Column="1" x:Name="ClientIdComboBox" Height="28"/>
        </Grid>

        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label    Grid.Column="0" Content="服务端地址:" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
            <Lay:LayTextBox  Grid.Column="1" Height="28" x:Name="ServerAddressEdit" Watermark="" HorizontalAlignment="Left"/>
            <Lay:LayCheckBox Grid.Column="2" Content="自动搜索服务端" Margin="10,0,0,0" x:Name="AutoSearchServer" HorizontalAlignment="Left"/>
        </Grid>

        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <Label    Grid.Column="0" Content="游戏服务端口:" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,10,0"/>
            <Lay:LayTextBox  Grid.Column="1" Height="28" x:Name="GameServerPort" Watermark="" HorizontalAlignment="Left"/>
        </Grid>

    </Grid>
</Window>
