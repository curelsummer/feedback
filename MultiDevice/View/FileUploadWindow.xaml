<Window x:Class="MultiDevice.FileUploadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiDevice"
        mc:Ignorable="d"
        Title="实验文件上传" Height="160" Width="420"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanMinimize" 
        Topmost="True"
        Loaded="Window_Loaded">
    <Grid>

        <StackPanel Grid.Row="0" Margin="10">
            <TextBlock Text="上传进度：" Margin="5"/>
            <ProgressBar x:Name="progressBar" Height="30" Margin="5" Minimum="0" Maximum="100"/>
            <TextBlock x:Name="txtProgress" Text="0%" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
