                            <Lay:LayComboBoxItem >K2</Lay:LayComboBoxItem>

                        </Lay:LayComboBox.Items>
                    </Lay:LayComboBox>

                    <Lay:LayComboBox Name="channel8ComboBox" Grid.Row="3" Grid.Column="3" FontSize="20" Width="140"  Margin="8 0 8 0" SelectedIndex="0"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                        <Lay:LayComboBox.Items>
                            <Lay:LayComboBoxItem >Nan</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >F4</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >C4</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >T4</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >P4</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >O2</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >Fz</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >Pz</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >Oz</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >D2</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >D4</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >D6</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >K2</Lay:LayComboBoxItem>

                        </Lay:LayComboBox.Items>
                    </Lay:LayComboBox>

                    <Lay:LayComboBox Name="refModeComboBox" Grid.Row="4" Grid.Column="3" FontSize="20" Width="140"  Margin="8 0 8 0" SelectedIndex="0"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                        <Lay:LayComboBox.Items>
                            <Lay:LayComboBoxItem >左耳</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >右耳</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >双耳平均</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >同侧</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >对侧</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >中央</Lay:LayComboBoxItem>
                        </Lay:LayComboBox.Items>
                    </Lay:LayComboBox>
                </Grid>

            </Lay:LayGroupBox>
        </Grid>

        <Grid Grid.Row="2" Margin="10,5,10,0">
            <Lay:LayGroupBox Header="游戏列表" Height="110" x:Name="gameList" Visibility="Hidden">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>


                    <Lay:LayCheckBox Grid.Row="0" Grid.Column="0" Content="Theater1"/>
                    <Lay:LayCheckBox Grid.Row="0" Grid.Column="1" Content="Theater2" Margin="10,0,0,0"/>
                    <Lay:LayCheckBox Grid.Row="0" Grid.Column="2" Content="Cube1" Margin="10,0,0,0"/>
                    <Lay:LayCheckBox Grid.Row="0" Grid.Column="3" Content="Cube2" Margin="10,0,0,0"/>
                    <Lay:LayCheckBox Grid.Row="0" Grid.Column="4" Content="RunningCar" Margin="10,0,0,0"/>
                    <Lay:LayCheckBox Grid.Row="0" Grid.Column="5" Content="RunningCar2" Margin="10,0,0,0"/>
                    <Lay:LayCheckBox Grid.Row="0" Grid.Column="6" Content="CarRacing2" Margin="10,0,0,0"/>

                    <Lay:LayCheckBox Grid.Row="1" Grid.Column="0" Content="TugOfWar" Margin="0,0,0,0"/>
                    <Lay:LayCheckBox Grid.Row="1" Grid.Column="1" Content="TugOfWar1" Margin="10,0,0,0"/>
                    <Lay:LayCheckBox Grid.Row="1" Grid.Column="2" Content="Moontravel" Margin="10,0,0,0"/>
                    <Lay:LayCheckBox Grid.Row="1" Grid.Column="3" Content="Moontravel1" Margin="10,0,0,0"/>
                    <Lay:LayCheckBox Grid.Row="1" Grid.Column="4" Content="homepage" Margin="10,0,0,0"/>
                    <Lay:LayCheckBox Grid.Row="1" Grid.Column="5" Content="Firefly" Margin="10,0,0,0"/>
                </Grid>
            </Lay:LayGroupBox>
