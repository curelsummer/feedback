<Window x:Class="MultiDevice.ParadigmSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiDevice"
        xmlns:Lay="clr-namespace:LayUI.Wpf.Controls;assembly=LayUI.Wpf"
        mc:Ignorable="d"
        d:DesignHeight="450"
        d:DesignWidth="800"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        Title="范式参数设置" Height="550" Width="920">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="4" Margin="10,05,10,0"></Border>
        <Grid Grid.Row="0" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Margin ="10,0,0,0" Content="范式选择 :" VerticalAlignment="Center"/>
            <Label Grid.Column="0" Margin="10,10,10,0" Content="*" Foreground="Red" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            <Lay:LayComboBox Grid.Column ="1" Width="200" Height="30" VerticalAlignment="Center" Name ="ParadigmComboBox" SelectionChanged="ParadigmComboBox_SelectionChanged"/>
            <Lay:LayButton Grid.Column="2" Margin="10, 0, 0, 0" Width="140" Height="32" Type="Customize"  x:Name="CreateButton" Cursor="Hand" Click="CreateButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{StaticResource IconFont}" Text="&#xea8a;" FontSize="16" />
                    <TextBlock Text="保存配置" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Lay:LayButton>


            <Lay:LayButton Grid.Column="3" Margin="5,0,0,0" Type="Danger"  Height="32" Width="140" x:Name="DeleteBtn" Click="DeleteBtn_Click" Visibility="Hidden">
                <StackPanel Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{StaticResource IconFont}" Text="&#xea99;" FontSize="16" />
                    <TextBlock Text="删除配置" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Lay:LayButton>
            
            <Lay:LayButton Grid.Column="4" Margin="5,0,0,0" Type="Customize" Height="32" Width="140" x:Name="NetConfigButton" Click="NetConfigButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{StaticResource IconFont}" Text="&#xeab3;" FontSize="16" />
                    <TextBlock Text="网络参数设置" VerticalAlignment="Center" Margin="5,0,0,0" />
                </StackPanel>
            </Lay:LayButton>

            
        </Grid>

        <Grid Grid.Row="1" Height="240" Margin="10,5,10,0">
            <Lay:LayGroupBox Header="通道配置">

                <Grid Margin="4" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>

                    <Lay:LayTextBlock Grid.Row="0" Grid.Column="0" Text="通道1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                    <Lay:LayTextBlock Grid.Row="0" Grid.Column="1" Text="A1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                    <Lay:LayTextBlock Grid.Row="0" Grid.Column="2" Text="通道2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>
                    <Lay:LayTextBlock Grid.Row="0" Grid.Column="3" Text="A2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18"/>


                    <Lay:LayTextBlock Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center"  FontSize="18" VerticalAlignment="Center">通道3</Lay:LayTextBlock>
                    <Lay:LayTextBlock Grid.Row="2" Grid.Column="0" HorizontalAlignment="Center"  FontSize="18" VerticalAlignment="Center">通道5</Lay:LayTextBlock>
                    <Lay:LayTextBlock Grid.Row="3" Grid.Column="0" HorizontalAlignment="Center"  FontSize="18" VerticalAlignment="Center">通道7</Lay:LayTextBlock>
                    <Lay:LayTextBlock Grid.Row="4" Grid.Column="0" HorizontalAlignment="Center"  FontSize="18" VerticalAlignment="Center">通道9</Lay:LayTextBlock>
                    <Lay:LayTextBlock Grid.Row="4" Grid.Column="2" HorizontalAlignment="Center"  FontSize="18" VerticalAlignment="Center">参考模式</Lay:LayTextBlock>
                    <Lay:LayTextBlock Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center"  FontSize="18" VerticalAlignment="Center">Cz</Lay:LayTextBlock>

                    <Lay:LayComboBox Name="channel3ComboBox" Grid.Row="1" Grid.Column="1" FontSize="20" Width="140"  Margin="8 0 8 0" SelectedIndex="0"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                        <Lay:LayComboBox.Items>
                            <Lay:LayComboBoxItem >Nan</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >F3</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >C3</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >T3</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >P3</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >O1</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >Fz</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >Pz</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >Oz</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >D1</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >D3</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >D5</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >K1</Lay:LayComboBoxItem>

                        </Lay:LayComboBox.Items>
                    </Lay:LayComboBox>

                    <Lay:LayComboBox Name="channel5ComboBox" Grid.Row="2" Grid.Column="1" FontSize="20" Width="140"  Margin="8 0 8 0" SelectedIndex="0"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                        <Lay:LayComboBox.Items>
                            <Lay:LayComboBoxItem >Nan</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >F3</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >C3</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >T3</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >P3</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >O1</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >Fz</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >Pz</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >Oz</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >D1</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >D3</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >D5</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >K1</Lay:LayComboBoxItem>

                        </Lay:LayComboBox.Items>
                    </Lay:LayComboBox>

                    <Lay:LayComboBox Name="channel7ComboBox" Grid.Row="3" Grid.Column="1" FontSize="20" Width="140"  Margin="8 0 8 0" SelectedIndex="0"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                        <Lay:LayComboBox.Items>
                            <Lay:LayComboBoxItem >Nan</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >F3</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >C3</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >T3</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >P3</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >O1</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >Fz</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >Pz</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >Oz</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >D1</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >D3</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >D5</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >K1</Lay:LayComboBoxItem>

                        </Lay:LayComboBox.Items>
                    </Lay:LayComboBox>

                    <Lay:LayTextBlock Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center"  FontSize="18" VerticalAlignment="Center" >通道4</Lay:LayTextBlock>
                    <Lay:LayTextBlock Grid.Row="2" Grid.Column="2" HorizontalAlignment="Center"  FontSize="18" VerticalAlignment="Center" >通道6</Lay:LayTextBlock>
                    <Lay:LayTextBlock Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center"  FontSize="18" VerticalAlignment="Center" >通道8</Lay:LayTextBlock>

                    <Lay:LayComboBox Name="channel4ComboBox" Grid.Row="1" Grid.Column="3" FontSize="20" Width="140"  Margin="8 0 8 0" SelectedIndex="0"  VerticalContentAlignment="Center" HorizontalContentAlignment="Center">
                        <Lay:LayComboBox.Items>
                            <Lay:LayComboBoxItem >Nan</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >F4</Lay:LayComboBoxItem>
                            <Lay:LayComboBoxItem >C4</Lay:LayComboBoxItem>
