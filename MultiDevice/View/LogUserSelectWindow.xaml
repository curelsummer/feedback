<Window x:Class="MultiDevice.LogUserSelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiDevice"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanMinimize" 
        xmlns:Lay="clr-namespace:LayUI.Wpf.Controls;assembly=LayUI.Wpf"
        Title="用户选择" Height="400" Width="380">
    <Grid>

        <StackPanel Grid.Row="0" Margin="10" VerticalAlignment="Center">

            <Lay:LayButton VerticalAlignment="Center" Width="220" Height="80" Type="Customize" x:Name="DoctorButton" Click="DoctorButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{StaticResource IconFont}" Text="&#xeb1c;" FontSize="26" />
                    <TextBlock Text="我是医生" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="26" />
                </StackPanel>
            </Lay:LayButton>

            <Lay:LayButton VerticalAlignment="Center" Margin="10" Width="220" Height="80" Type="Customize" x:Name="UserButton" Click="UserButton_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{StaticResource IconFont}" Text="&#xeb97;" FontSize="26" />
                    <TextBlock Text="我是患者" VerticalAlignment="Center" Margin="5,0,0,0" FontSize="26" />
                </StackPanel>
            </Lay:LayButton>
        </StackPanel>

    </Grid>
</Window>
