<Window x:Class="MultiDevice.PasswordResetCheckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiDevice"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        xmlns:Lay="clr-namespace:LayUI.Wpf.Controls;assembly=LayUI.Wpf"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanMinimize" 
        ShowInTaskbar="False"
        Title="用户重置验证" Height="300" Width="600">
    
    <StackPanel Margin="12">
        <Lay:LayTextBlock Margin="0 0 0 12" FontSize="28" FontWeight="Bold" Text="机器码" x:Name="MachineCodeLabel" HorizontalAlignment="Center"></Lay:LayTextBlock>
        <Label  Content="请联系厂家,告知你的重置码,我们将向你返回验证码"  FontSize="18" HorizontalAlignment="Center" FontWeight="Bold"/>
        <Lay:LayTextBox x:Name="VerifyCode" Watermark="输入您的验证码..." Width="420" />
        <Lay:LayButton  Margin="0 12 0 0" Width="200" Height="40" Cursor="Hand" Content="确认" x:Name="SubmitButton" Click="SubmitButton_Click" Type="Customize"></Lay:LayButton>

    </StackPanel>
</Window>
