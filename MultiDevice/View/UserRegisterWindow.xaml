<Window x:Class="MultiDevice.UserRegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiDevice"
        xmlns:Lay="clr-namespace:LayUI.Wpf.Controls;assembly=LayUI.Wpf"
        xmlns:LayHelper="clr-namespace:LayUI.Wpf.Extend;assembly=LayUI.Wpf"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        d:DesignHeight="450"
        d:DesignWidth="1100"
        Title="用户信息录入" Height="640" Width="1100">

    <Window.Resources>
        <Style x:Key="dgCell" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"></RowDefinition>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Margin="10" Grid.Row="0">
            <Border BorderBrush="DarkGray" BorderThickness="1" CornerRadius="4"></Border>
            <Grid Grid.Row="0" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="150"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="测试编号:" VerticalAlignment="Center" FontSize="14" Margin="10, 0, 0, 0"></Label>
                <Label Grid.Row="0" Grid.Column="0" Content="*" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="Red" FontWeight="Bold" FontSize="12" Margin="0,0,10,0"></Label>
                <Lay:LayTextBox Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Height="28" Name="TestNumberEdit" Watermark="" LayHelper:LayTextBoxHelper.InputType="Number"/>

                <Label Grid.Row="0" Grid.Column="2" Content="姓 名:" VerticalAlignment="Center" FontSize="14" Margin="20, 0, 0, 0"></Label>
                <Label Grid.Row="0" Grid.Column="2" Content="*" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="Red" FontWeight="Bold" FontSize="12" Margin="0,0,10,0"></Label>
                <Lay:LayTextBox  Grid.Row="0" Grid.Column="3" VerticalAlignment="Center" Height="28" Name="NameEdit"  Watermark="" MaxLength="100" PreviewTextInput="NameEdit_PreviewTextInput"/>

                <Label Grid.Row="1" Grid.Column="0" Content="性 别:" VerticalAlignment="Center" FontSize="14" Margin="10, 0, 0, 0"></Label>
                <Label Grid.Row="1" Grid.Column="0" Content="*" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="Red" FontWeight="Bold" FontSize="12" Margin="0,0,10,0"></Label>
                <Lay:LayComboBox Grid.Row="1" Grid.Column="1" MinWidth="150" HorizontalAlignment="Left" SelectedIndex="0" Name ="SexComboBox"  Height="28">
                    <ComboBoxItem Content="男"/>
                    <ComboBoxItem Content="女"/>
                </Lay:LayComboBox>

                <Label Grid.Row="1" Grid.Column="2" Content="出生日期:" VerticalAlignment="Center" FontSize="14" Margin="10, 0, 0, 0"></Label>
                <Label Grid.Row="1" Grid.Column="2" Content="*" VerticalAlignment="Center" HorizontalAlignment="Right" Foreground="Red" FontWeight="Bold" FontSize="12" Margin="0,0,10,0"></Label>
                <Lay:LayDatePicker Grid.Row="1" Grid.Column="3" VerticalAlignment="Center" FontSize="12" Height="28" Name="BirthDayDateTimePicker">
                </Lay:LayDatePicker>


                <Label Grid.Row="2" Grid.Column="0" Content="备 注1:" VerticalAlignment="Center" FontSize="14" Margin="10, 0, 0, 0"></Label>
                <Lay:LayTextBox  Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Height="28" Grid.ColumnSpan="3" Name="Remarks1"  Watermark="" HorizontalAlignment="Left" />


                <Label Grid.Row="2" Grid.Column="2" Content="病例号:" VerticalAlignment="Center" FontSize="14" Margin="10, 0, 0, 0"></Label>
                <Lay:LayTextBox  Grid.Row="2" Grid.Column="3" VerticalAlignment="Center" Height="28" Grid.ColumnSpan="3" Name="DetectNumberEdit"  Watermark="" HorizontalAlignment="Left"  LayHelper:LayTextBoxHelper.InputType="Number" />

                
                <Label Grid.Row="3" Grid.Column="0" Content="备 注2:" VerticalAlignment="Center" FontSize="14" Margin="10, 0, 0, 0"></Label>
                <Lay:LayTextBox  Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Height="28" Grid.ColumnSpan="3" Name ="Remarks2"  Watermark="" HorizontalAlignment="Left" />


                <Lay:LayButton Grid.Row="0" Grid.Column="4" Width="140" Height="30"  Margin="10, 0, 0, 0" Name ="SubmitBtn" Cursor="Hand" Type="Normal" Click="SubmitBtn_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{StaticResource IconFont}" Text="&#xe9d9;" FontSize="16" />
                        <TextBlock Text="添加" VerticalAlignment="Center" Margin="5,0,0,0" />
                    </StackPanel>
                </Lay:LayButton>

                <Lay:LayButton Grid.Row="1" Grid.Column="4" Width="140" Height="30"  Margin="10, 0, 0, 0" Name="ClearBtn"   Cursor="Hand" Type="Danger" Click="ClearBtn_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="{StaticResource IconFont}" Text="&#xeaac;" FontSize="16" />
                        <TextBlock Text="清除" VerticalAlignment="Center" Margin="5,0,0,0" />
                    </StackPanel>
                </Lay:LayButton>
            </Grid>
        </Grid>

        <Grid Grid.Row="1" Margin="0,10">
            <Lay:LayTextBox x:Name="searchEdit" TextChanged="searchEdit_TextChanged"  Watermark="请输入测试编号/患者姓名" Width="1065">
            </Lay:LayTextBox>
        </Grid>
        
        <Grid Grid.Row="2" Margin="10, 10, 10, 20">
            <DataGrid Grid.Row="1"
           x:Name="userGrid"
           AutoGenerateColumns="False"
           HeadersVisibility="Column"
           ColumnHeaderHeight="35"
           AlternationCount="2"
           SelectionMode="Single"
           IsReadOnly="True"
           CanUserAddRows="False"
           CanUserDeleteRows="False"
           CanUserReorderColumns="False"
           CanUserResizeRows="False"
           CanUserResizeColumns="False"
           MinRowHeight="24"
           FontSize="16"
           ScrollViewer.VerticalScrollBarVisibility="Auto"
           MaxHeight="600"
           SelectionChanged="userGrid_SelectionChanged">

                <DataGrid.Style>
                    <Style TargetType="DataGrid">
                        <!--网格线颜色-->
                        <Setter Property="BorderBrush" Value="LightGray" />
                        <Setter Property="HorizontalGridLinesBrush">
                            <Setter.Value>
                                <SolidColorBrush Color="LightGray"/>
                            </Setter.Value>
                        </Setter>

                        <Setter Property="VerticalGridLinesBrush">
                            <Setter.Value>
                                <SolidColorBrush Color="LightGray"/>
                            </Setter.Value>
                        </Setter>

                        <Style.Triggers>
                            <!-- 如果 DataGrid 没有数据，显示 TextBlock -->
                            <Trigger Property="HasItems" Value="False">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="DataGrid">
                                            <Grid>
                                                <!-- 保证表头始终显示在顶部 -->
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <!-- 表头 -->
                                                    <RowDefinition Height="*"/>
                                                    <!-- 内容区域 -->
                                                </Grid.RowDefinitions>

                                                <!-- 表头区域，外部添加边框以显示上边框 -->
                                                <Border BorderBrush="{TemplateBinding BorderBrush}"
                                         BorderThickness="1,1,1,0" Grid.Row="0">
                                                    <DataGridColumnHeadersPresenter />
                                                </Border>

                                                <!-- 显示"暂无数据"消息，同时保留边框 -->
                                                <Border Grid.Row="1" BorderBrush="{TemplateBinding BorderBrush}" 
                                         BorderThickness="{TemplateBinding BorderThickness}">
                                                    <TextBlock Text="暂无数据"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Center"
                                                FontSize="26"
                                                Foreground="Gray"/>
                                                </Border>
                                            </Grid>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Style>

                <DataGrid.ColumnHeaderStyle>
                    <!--表头样式-->
                    <Style TargetType="DataGridColumnHeader">
                        <!--表头字居中-->
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="FontSize"   Value="14"/>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn MinWidth ="160" Binding="{Binding TestNumber}" Header="测试编号" ElementStyle="{StaticResource dgCell}" />
                    <DataGridTextColumn MinWidth ="160" Binding="{Binding DetectNumber}" Header="病历号" ElementStyle="{StaticResource dgCell}" />
                    <DataGridTextColumn MinWidth ="120" Binding="{Binding Name}" Header="  姓名  " ElementStyle="{StaticResource dgCell}" />
                    <DataGridTextColumn MinWidth ="80"  Binding="{Binding Sex}" Header=" 性别 " ElementStyle="{StaticResource dgCell}" />
                    <DataGridTextColumn MinWidth ="160" Binding="{Binding BirthDay}" Header=" 出生日期 " ElementStyle="{StaticResource dgCell}" />
                    <DataGridTextColumn MinWidth ="200" Binding="{Binding CreateDateTime}" Header=" 创建时间 " ElementStyle="{StaticResource dgCell}" />
                    <DataGridTextColumn MinWidth ="100" Binding="{Binding Status}" Header=" 状态 " ElementStyle="{StaticResource dgCell}" Visibility="Collapsed" />
                    <DataGridTemplateColumn MinWidth="100" Header="操作">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                                    <Button Margin="10 0 0 0"  Width="60" Height="28" FontSize="15" Background="#E0FFFF"  Content="修改" Cursor="Hand" Click="ModifyButton_Click"  x:Name="ModifyButton"/>
                                    <Button Margin="10 0 10 0" Width="60" Height="28" FontSize="15" Background="#E0FFFF"  Content="删除" Cursor="Hand" Click="DeleteButton_Click"  x:Name="DeleteButton"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</Window>
