<Window x:Class="MultiDevice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Closing="Window_Closing" 
        Loaded="Window_Loaded"
        Icon="../image/icon.ico"
        Title="自适应反馈系统" Height="600" Width="850">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Name="centerPanel" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
        </Grid>
        <DockPanel Grid.Row="0" Background="#e0e0e0"> 
                <Image HorizontalAlignment="Left" Source="../icons/jielian_logo.png" DockPanel.Dock="Left" Stretch="Uniform" Height="40"></Image>
            <Button FontSize="25" Width="80" Name="deviceSearchBtn" DockPanel.Dock="Right" HorizontalAlignment="Right" 
                    Click="deviceSearchBtn_Click"  Foreground="#e0e0e0" Background="#e0e0e0" BorderBrush="#e0e0e0" ToolTip="点击搜索脑电设备" Cursor="Hand" >
                <StackPanel Orientation="Vertical">
                    <Image Source="../icons/search.png" Stretch="Uniform" Height="40"></Image>
                </StackPanel>
            </Button> 
        </DockPanel>
    </Grid>
</Window>
