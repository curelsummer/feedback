<Window x:Class="MultiDevice.MultiDeviceMainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:input="clr-namespace:System.Windows.Input;assembly=PresentationCore"
        xmlns:mycontrol="clr-namespace:MultiDevice"
        Icon="../image/icon.ico"
        Closing="Window_Closing"
        Title="MultiDeviceMainWindow" Height="750" Width="1200">

    <Window.Resources>
        <LinearGradientBrush x:Key="MyGradientBackground"
                             StartPoint="0.5,0"
                             EndPoint="0.5,1">
            <GradientStop Color="White" Offset="0.0"/>
            <GradientStop Color="gray" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Resources>

    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="2.2*"></RowDefinition>
            <RowDefinition Height="18*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Margin="10">
            <MenuItem  Name="BDFSaveMenuItem"  Background="#cccc33" Click="SvrBDF_control_Click" ToolTip="保存文件" Cursor="Hand">
                <MenuItem.Header>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="../icons/save.png" Width="32" Height="32" x:Name="saveDataIcon"/>
                        <TextBlock Text="数据保存" HorizontalAlignment="Center"/>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem  Name="EventA" ToolTip="事件" HorizontalAlignment="Right" Background="#5594da" Cursor="Hand">
                <MenuItem.Header>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="../icons/flagAll.png" Width="32" Height="32"/>
                        <TextBlock Text="事件触发" HorizontalAlignment="Center"/>
                    </StackPanel>
                </MenuItem.Header>
                <MenuItem Header="Event A" Click="MenuItemA_Click" >
                    <MenuItem.Icon>
                        <Image Source="../icons/flagA.png" Height="16" Width="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Event B" Click="MenuItemB_Click">
                    <MenuItem.Icon>
                        <Image Source="../icons/flagB.png" Height="16" Width="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Event C" Click="MenuItemC_Click">
                    <MenuItem.Icon>
                        <Image Source="../icons/flagC.png" Height="16" Width="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Event D" Click="MenuItemD_Click">
                    <MenuItem.Icon>
                        <Image Source="../icons/flagD.png" Height="16" Width="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Sound A" Click="MenuItemE_Click">
                    <MenuItem.Icon>
                        <Image Source="../icons/speakerA.png" Height="16" Width="16"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Sound B" Click="MenuItemF_Click">
                    <MenuItem.Icon>
                        <Image Source="../icons/speakerB.png" Height="16" Width="16"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <MenuItem Margin="2 0 2 0"  Name="VideoRecordMenuItem" Background="#8FBC8F"  Click="videoRecordMenuItem_Click"  ToolTip="开始视频记录" Cursor="Hand">
                <MenuItem.Header>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="../icons/video_off.png" Width="32" Height="32"/>
                        <TextBlock Text="视频记录" HorizontalAlignment="Center"/>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem Margin="2 0 2 0"  Name="UserRegister" Background="#3cbb43" Click="UserRegister_Click" ToolTip="填写用户信息" Cursor="Hand">
                <MenuItem.Header>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="../icons/people.png" Width="32" Height="32"/>
                        <TextBlock Text="用户录入" HorizontalAlignment="Center"/>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem Margin="2 0 2 0"  Name="settingsMenuItem" Background="#5594da" Click="settingMenu_Click"  ToolTip="通道选择" Cursor="Hand">
                <MenuItem.Header>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="../icons/chan_loc.png" Width="32" Height="32"/>
                        <TextBlock Text="参数设置" HorizontalAlignment="Center"/>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem Margin="2 0 2 0"  Name="detectMenuItem" Background="#5594da" Click="detectBtn_Click" ToolTip="阻抗检测" Cursor="Hand">
                <MenuItem.Header>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="../icons/impedance.png" Width="32" Height="32"/>
                        <TextBlock Text="阻抗匹配" HorizontalAlignment="Center"/>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem Margin="2 0 2 0"  Name="start_Calusvr" Background="#5594da" Click="startCalusvr_Click"  ToolTip="运算服务" Cursor="Hand">
                <MenuItem.Header>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="../icons/Calculator.png" Width="32" Height="32" x:Name="GameSeverIcon"/>
                        <TextBlock Text="运算服务" HorizontalAlignment="Center"/>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>

            <MenuItem Margin="2 0 2 0"  Name="AboutMenuItem" Background="Azure" Click="AboutMenuItem_Click" ToolTip="关于软件" Cursor="Hand" >
                <MenuItem.Header>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <Image Source="../icons/version_no.png" Width="32" Height="32"/>
                        <TextBlock Text="关于软件" HorizontalAlignment="Center"/>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>

            <Label Content="注意 : 电池电量低于5%，请尽快充电（充电时请勿使用）!" Foreground="Red" FontWeight="Bold" Width="400" HorizontalAlignment="Right" x:Name="WaringLabel" Visibility="Hidden"/>
        </Menu>
        <Grid Grid.Row="2" Name="stateBar" Margin="20,3,20,10" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" HorizontalAlignment="Right" Name="battery" FontSize="15" VerticalAlignment="Top" ToolTip="电池电量" >
                <Label.Background>
                    <ImageBrush ImageSource="../icons/battery.png" Stretch="Fill"/>
                </Label.Background>
                读取中...
            </Label>
            <Label Grid.Column="1" VerticalAlignment="Center" Content=" " Name="isCharging" HorizontalContentAlignment="Center" ToolTip="充电状态"></Label>

            <TextBox Grid.Column="2" FontSize=" 15" Name="chs_input" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"  ></TextBox>
            <Button Grid.Column="3" Margin="0 0 5 0" Name="selectChn" Click="selectChn_Click" Background="{StaticResource MyGradientBackground}" ToolTip="选择通道">
                <Image Source="../icons/confirm.png" Stretch="Uniform"/>
            </Button>

            <TextBox Grid.Column="4" FontSize=" 15" Name="flt_input" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"  ></TextBox>
            <Button Grid.Column="5" Margin="0 0 10 0" Background="{StaticResource MyGradientBackground}" Name="mFilterCheck" ToolTip="滤波器关闭" Click="FilterCheck_Click">
                <Image Source="../icons/filter_off.png" Stretch="Uniform"/>
            </Button>
            <Button Grid.Column="6" Margin="10 0 10 0" Name="moveup" Click="moveup_Click" ToolTip="向上移动"  Background="{StaticResource MyGradientBackground}">
                <Image Source="../icons/moveUp.png"/>
            </Button>
            <Button Grid.Column="7" Margin="10 0 10 0" Name="movedown" Click="movedown_Click" ToolTip="向下移动" Background="{StaticResource MyGradientBackground}">
                <Image Source="../icons/moveDown.png"/>
            </Button>
            <Button Grid.Column="8" Margin="10 0 10 0" Name="ResetMy" Click="ResetMy_Click" ToolTip="重置波形显示"  Background="{StaticResource MyGradientBackground}">
                <Image Source="../icons/reset_cfg.png"/>
            </Button>

            <Button Margin="10 0 10 0"  Grid.Column="9" Name="showBaseLine" Click="showBaseLine_Click" ToolTip="基准线关闭" Background="{StaticResource MyGradientBackground}">
                <Image Source="../icons/baseline_off.png" Stretch="Uniform"/>
            </Button>
            <Button Margin="10 0 10 0"  Grid.Column="12" Name="showTimeLine" Click="showTimeLine_Click"  ToolTip="时间刻度开启" Background="{StaticResource MyGradientBackground}">
                <Image Source="../icons/timeline_on.png" Stretch="Uniform"/>
            </Button>
            <Button Grid.Column="10" Margin="10 0 10 0" Name="plusSec" Click="plusSec_Click" ToolTip="缩小波形" Background="{StaticResource MyGradientBackground}">
                <Image Source="../icons/add.png"/>
            </Button>
            <Button Grid.Column="11" Margin="10 0 10 0" Name="minusSec" Click="minusSec_Click" ToolTip="增大波形" Background="{StaticResource MyGradientBackground}">
                <Image Source="../icons/minus.png"/>
            </Button>
            <Label Grid.Column="13" Name="SEC_COUNT" ToolTip="滚动速度: mm/s" FontSize="19" VerticalAlignment="Top" HorizontalContentAlignment="Center">0</Label>
            <Label Name="TimeCount" Grid.Column="14" ToolTip="已记录时长" VerticalAlignment="Center" HorizontalContentAlignment="Center"></Label>

        </Grid>


        <Grid Grid.Row="1" Name="ImagGrid" ShowGridLines="False" HorizontalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="20*"></RowDefinition>
                <RowDefinition Height="1*"></RowDefinition>
            </Grid.RowDefinitions>

            <Grid Name="SliderAndText" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Width="1200">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="16*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Name="calcuBaseline" Click="calcuBaseline_Click" Grid.Column="2" ToolTip="减去基线" Margin="5,0,5,0" Height="29" VerticalAlignment="Bottom" IsEnabled="True" Cursor="Hand">
                    <Image Source="../icons/baseline.png"/>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
